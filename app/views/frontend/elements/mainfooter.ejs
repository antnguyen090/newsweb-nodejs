<%- include('./../helpers/createtag'); -%>
<%- include('./../helpers/createpopular'); -%>


<div class="container-fluid bg-dark pt-5 px-sm-3 px-md-5 mt-5">
    <div class="row py-4">
        <div class="col-lg-4 col-md-4 mb-5">
            <h5 class="mb-4 text-white text-uppercase font-weight-bold">Liên Lạc</h5>
            <p class="font-weight-medium">
                <i class="fa fa-map-marker-alt mr-2"></i><%= settingData.address %></p>
            <p class="font-weight-medium">
                <i class="fa fa-phone-alt mr-2"></i><%= settingData.phonenumber %></p>
            <p class="font-weight-medium">
                <i class="fa fa-envelope mr-2"></i><%= settingData.email %></p>
            <h6 class="mt-4 mb-3 text-white text-uppercase font-weight-bold">Follow Us</h6>
            <div class="d-flex justify-content-start">
                <a class="btn btn-lg btn-secondary btn-lg-square mr-2" href="<%= settingData.linkTwitter %>">
                    <i class="fab fa-twitter"></i>
                </a>
                <a class="btn btn-lg btn-secondary btn-lg-square mr-2" href="<%= settingData.linkfacebook %>">
                    <i class="fab fa-facebook-f"></i>
                </a>
                <a class="btn btn-lg btn-secondary btn-lg-square mr-2" href="<%= settingData.linkLinkedIn %>">
                    <i class="fab fa-linkedin-in"></i>
                </a>
                <a class="btn btn-lg btn-secondary btn-lg-square mr-2" href="<%= settingData.linkInstagram %>">
                    <i class="fab fa-instagram"></i>
                </a>
                <a class="btn btn-lg btn-secondary btn-lg-square" href="<%= settingData.linkYoutube %>">
                    <i class="fab fa-youtube"></i>
                </a>
            </div>
        </div>
        <div class="col-lg-4 col-md-4 mb-5">
            <h5 class="mb-4 text-white text-uppercase font-weight-bold">Tin Tức Phổ Biến</h5>
            <%- popularArticle(article, 2) %>
        </div>
        <div class="col-lg-4 col-md-4  mb-5">
            <h5 class="mb-4 text-white text-uppercase font-weight-bold">Thể Loại</h5>
            <div class="m-n1">
                <%- tagHelper(category) %>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid py-4 px-sm-3 px-md-5" style="background: #111111;">
    <p class="m-0 text-center">&copy;
        <%= settingData.coppyright %>
    </p>
</div>
