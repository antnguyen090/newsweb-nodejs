<%- include('./showCategoryName'); -%>
<%- include('./customdate'); -%>


<% 
    showSlider = (collection, category, photo) => {
        let html=''
        collection.forEach((val, index)=>{
                if (index > 4) return;
                html += `<div class="position-relative overflow-hidden" style="height: 500px;">
                    <img class="img-fluid h-100" src="/uploads/${photo}/${val.thumb}" style="object-fit: cover;" alt="${photo}">
                    <div class="overlay">
                        <div class="mb-2">
                            <a class="badge badge-primary text-uppercase font-weight-semi-bold p-2 mr-2" href="category/${showCategoryName(category, val.categoryId).slug}">${showCategoryName(category, val.categoryId).name}</a>
                            <a class="text-white" href="">${customDate(val.createdAt)}</a>
                        </div>
                        <a class="h2 m-0 text-white text-uppercase font-weight-bold" href="single/${val.slug}">${val.name}</a>
                    </div>
                </div>`
        })
        return html
    }
%>