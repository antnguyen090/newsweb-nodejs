<%- include('./showCategoryName'); -%>
<%- include('./customdate'); -%>

<% 
    showTopPost = (collection, category, photo) => {
        let html=''
        collection.forEach((val, index)=>{
                if (index > 3) return;
                html +=  `<div class="col-md-6 px-0">
                            <div class="position-relative overflow-hidden" style="height: 250px;">
                                <img class="img-fluid w-100 h-100" src="/uploads/${photo}/${val.thumb}" style="object-fit: cover;">
                                <div class="overlay">
                                    <div class="mb-2">
                                        <a class="badge badge-primary text-uppercase font-weight-semi-bold p-2 mr-2"
                                            href="${showCategoryName(category, val.categoryId).slug}">${showCategoryName(category, val.categoryId).name}</a>
                                        <a class="text-white" href=""><small>${customDate(val.createdAt)}</small></a>
                                    </div>
                                    <a class="h6 m-0 text-white text-uppercase font-weight-semi-bold" href="single/${val.slug}">${val.name}</a>
                                </div>
                            </div>
                        </div>`
        })
        return html
    }
%>