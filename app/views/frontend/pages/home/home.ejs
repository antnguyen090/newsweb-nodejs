<%- include('./../../helpers/showslider'); -%>
<%- include('./../../helpers/showtoppost'); -%>
<%- include('./../../helpers/showbreakingnews'); -%>
<%- include('./../../helpers/showfeaturenews'); -%>
<%- include('./../../helpers/shownewsarticle'); -%>
<%- include('./../../helpers/pagination'); -%>






<% 
    const collection = "index";
    const articlePhoto = "article"
    let numberPostLast = [4, 4, 1, 4]

    let slider = articleHome.filter(obj =>
        obj.slider === true
    )
    let toppost = articleHome.filter(obj =>
        obj.toppost === true
    )
    let breakingnews = articleHome.filter(obj =>
        obj.breakingnews === true
    )
    let fearture = articleHome.filter(obj =>
        obj.fearture === true
    )
%>


<!-- Main News Slider Start -->
    <div class="container-fluid">
    <div class="row">
        <div class="col-lg-7 px-0">
            <div class="owl-carousel main-carousel position-relative">
                <%- showSlider(slider, category, articlePhoto) %>
            </div>
        </div>
        <div class="col-lg-5 px-0">
            <div class="row mx-0">
                <%- showTopPost(toppost, category, articlePhoto) %>
            </div>
        </div>
    </div>
    </div>
<!-- Main News Slider End -->

<!-- Breaking News Start -->
    <div class="container-fluid bg-dark py-3 mb-3">
    <div class="container">
        <div class="row align-items-center bg-dark">
            <div class="col-12">
                <div class="d-flex justify-content-between">
                    <div class="bg-primary text-dark text-center font-weight-medium py-2" style="width: 170px;">Tin Nóng</div>
                    <div class="owl-carousel tranding-carousel position-relative d-inline-flex align-items-center ml-3"
                        style="width: calc(100% - 170px); padding-right: 90px;">
                        <%- showBreakingNews(breakingnews) %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
<!-- Breaking News End -->


<!-- Featured News Slider Start -->
    <div class="container-fluid pt-5 mb-3">
    <div class="container">
        <div class="section-title">
            <h4 class="m-0 text-uppercase font-weight-bold">Tin Nổi Bật</h4>
        </div>
        <div class="owl-carousel news-carousel carousel-item-4 position-relative">
            <%- showFeatureNews(fearture, category, articlePhoto) %>
        </div>
    </div>
    </div>
<!-- Featured News Slider End -->

<!-- News With Sidebar Start -->
    <div class="container-fluid"> 
        <div class="container">
        <div
            class="row">

            <!-- News With SidebarLeft Start -->
            <div class="col-lg-8">
                <div class="row">
                    <div class="col-12">
                        <div class="section-title">
                            <h4 class="m-0 text-uppercase font-weight-bold">Tin Mới Nhất</h4>
                            <a class="text-secondary font-weight-medium text-decoration-none" href="">Xem tất Cả</a>
                        </div>
                    </div>
                    <%- showNewsArticle(article, category, articlePhoto, numberPostLast) %>
                    <div class="col-12">
                        <ul class="pager">
                            <%- paginationHelper(pagination, collection, keyword)  %>

                        </ul>
                    </div>
                </div>

            </div>
            <!-- News With SidebarLeft End -->

            <!-- News With SidebarRight Start -->
            <div class="col-lg-4">
                <!-- Social Follow Start -->
                <%- include('./../../elements/sidebarright/socialfollow'); -%>
                <!-- Social Follow End -->

                <!-- Ads Start -->
                <!-- Ads End -->

                <!-- Popular News Start -->
                <%- include('./../../elements/sidebarright/popularnews'); -%>
                <!-- Popular News End -->

                <!-- Newsletter Start -->
                <%- include('./../../elements/sidebarright/newsletter'); -%>
                <!-- Newsletter End -->
                <!-- Tags Start -->
                <%- include('./../../elements/sidebarright/tags'); -%>
                <!-- Tags End -->
            </div>
            <!-- News With SidebarRight End -->
        </div>
        </div>
    </div>
<!-- News With Sidebar End -->
